<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<link href="https://fonts.googleapis.com/css?family=Crimson+Text" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
		<link rel="stylesheet" href="css/materialize.css">
		<link rel="stylesheet" href="css/interests.css">
		<link rel="stylesheet" href="css/main.css">
		<script src="js/jquery-1.11.0.js"></script>
		<script src="js/materialize.js"></script>
		<script src="js/interests.js"></script>
		<title>Spanglish</title>
	</head>
	<body>
		<div class="container">
			<h1>Interests</h1>
	    <p>
				Customize your interests! Each toggle changes the stories available
				for you to read!
			</p>
	    <form id="changeInterestForm" role="form" method="get" action="/changeinterest">
	    	<div class="container">
					<div class="row">
						{{#each Interests}}
						<div class="col s4 form-group" style="text-align:center; margin-top: 15px;">
							<i class="{{icon}}" style="font-size: 6em;"></i>
							<p class="text-center">{{name}}</p>
							<label class="switchcustom" for="{{id}}">
	 					 		<input type="checkbox" id="{{id}}" class="form-control" name="{{id}}" {{enabled}}>
	  						<span class="slidercustom roundcustom"></span>
							</label>
						</div>
						{{/each}}
					</div>
					<div class="row">
						<div class="col s12" style="text-align: center; width: 100%;">
							<input type="submit" id="submitBtn" class="btn" style="background-color: #EE6E73;" value="Homepage">
						</div>
					</div>
				</div>
			</form>
		</div>
