	<script src="js/words.js" charset="utf-8"></script>
	<script src="js/materialize.js"></script>
	<title>Language Learners</title>
</head>
<body>
	<div class="container ">
		<h1>Words</h1>
    <p>Here is the complete list of words you may come across in your stories.</p>
		<form class="form-inline">
			<input class=" col form-control s12" onkeyup="changeWords()" type="search"
			placeholder="Search for an English or Spanish word..." aria-label="Search" id="wordSearch">
		</form>
		<div class="container vocab">
			<ul class="collection" id="words">
				{{#each words}}
				<li class="collection-item"><strong>{{word}}:</strong> {{meaning}}</li>
				{{/each}}
			</ul>
		</div>
	</div>
	<div class="container text-center" style="margin-top:6px;">
		<a type="button" class="btn btn-link btn-lg" href="/index" style="background-color: #EE6E73;">
			<p style="color:white;">Homepage</p>
		</a>
	</div>
